<%@ Page Title="" Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="ManageProjectGroup.aspx.cs" Inherits="FYPMSWebsite.Student.ManageProjectGroup" %>
<asp:Content ID="Content1" ContentPlaceHolderID="MainContent" runat="server">
    <div class="form-horizontal">
        <h4><span style="text-decoration: underline; color: #800000" class="h4"><strong>Manage Project Group</strong></span></h4>
        <asp:Label ID="lblResultMessage" runat="server" Font-Bold="True" CssClass="label" Font-Names="Arial" Font-Size="Small"></asp:Label>
        <asp:Panel ID="pnlAddGroupMember" runat="server" Visible="False">
            <hr />
            <!-- Student input controls -->
            <div class="form-group" role="row">
                <asp:Label runat="server" Text="Student username:" CssClass="control-label col-md-2" AssociatedControlID="txtUsername"></asp:Label>
                <div class="col-md-2">
                    <asp:TextBox ID="txtUsername" runat="server" CssClass="form-control input-sm" MaxLength="15" Wrap="False"></asp:TextBox>
                </div>
                <div class="col-md-2">
                    <asp:Button ID="btnAddGroupMember" runat="server" Text="Add Group Member" CssClass="btn-sm"
                        ValidationGroup="UsernameValidation" OnClick="BtnAddGroupMember_Click" />
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <asp:RequiredFieldValidator runat="server" ErrorMessage="A username is required." ControlToValidate="txtUsername"
                        CssClass="text-danger" Display="Dynamic" EnableClientScript="False" ValidationGroup="UsernameValidation"></asp:RequiredFieldValidator>
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <asp:CustomValidator ID="CvValidateNewMember" runat="server" ErrorMessage=""
                        ControlToValidate="txtUsername" CssClass="text-danger" Display="Dynamic" EnableClientScript="False"
                        OnServerValidate="CvValidateNewMember_ServerValidate" ValidationGroup="UsernameValidation"></asp:CustomValidator>
                </div>
            </div>
            <div class="form-group" role="row">
            </div>
        </asp:Panel>
        <!-- Group member display -->
        <asp:Panel ID="pnlGroupMembers" runat="server" Visible="False">
            <hr />
            <h5><span style="text-decoration: underline; color: #800000" class="h5 col-md-offset-1 "><strong>Group Members</strong></span></h5>
            <div class="form-group" role="row">
                <div class="col-md-offset-1">
                    <asp:GridView ID="gvGroupMembers" runat="server" CssClass="table-condensed" BorderStyle="Solid"
                        CellPadding="0" Font-Names="Arial" Font-Size="Small" AutoGenerateDeleteButton="True" DeleteText="Remove"
                        OnRowDataBound="GvGroupMembers_RowDataBound" OnRowDeleting="GvGroupMembers_RowDeleting">
                    </asp:GridView>
                </div>
            </div>
        </asp:Panel>
        <asp:Panel ID="pnlCreateButton" runat="server" Visible="False">
            <hr />
            <asp:Button ID="btnCreateGroup" runat="server" Text="Create Group" OnClick="BtnCreateGroup_Click" />
        </asp:Panel>
    </div>
</asp:Content>
